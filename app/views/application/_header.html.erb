<!-- Branding Logo -->
<div class="row hidden-xs">
  <div class="col-xs-12">
    <div id="branding">
      <%= link_to "AwesomePV", root_path, :class => "apvLogo" %>
    </div>
  </div>
</div>
<!-- Branding Logo End -->

<!-- Navbar -->
<div id="apvNav">
  <nav class="navbar navbar-default" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#mainNav">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "AwesomePV", root_path, :class => "logo-xs visible-xs" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="mainNav">
      <ul class="nav navbar-nav nomar">
        <li class="active">
          <%= link_to root_path do %>
          <span class="glyphicon glyphicon-home"></span>
          <% end %>
        </li>
        <li>
          <%= link_to "/master" do %>
          <span class="glyphicon glyphicon-lock"></span>
          <% end %>
        </li>
        <li>
          <%= link_to "Suggest a Video", "#suggest" %>
        </li>
        <li>
          <%= link_to "Submit a Video", "#submit" %>
        </li>
        <li>
          <%= link_to "Login", "#login" %>
        </li>
      </ul>
      <form class="navbar-form navbar-right hidden-xs" role="search">
        <div class="form-group">
          <span class="glyphicon glyphicon-search"></span>
          <input type="text" class="form-control">
        </div>
      </form>
    </div>
  </nav>
</div>
<!-- Navbar End -->

<script type="text/javascript">
$(document).ready(function() {
  var $header = $("#apvNav"),
      $clone = $header.before($header.clone().addClass("container clone"));
  
  $(window).on("scroll", function() {
      var fromTop = $(window).scrollTop();
      $("body").toggleClass("down", (fromTop > 200));
  });
});
</script>