<div class="row">
	<div class="col-md-8 col-md-offset-2">

		<div class="page-header">
		  <h1><%= t(:login) %> <small><%= t(:got_new) %></small></h1>
		</div>

		<div class="col-md-6 col-md-offset-3">
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="form-group">
			  	<div class="input-group">
      			<div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
			    	<%= f.text_field :username, autofocus: true, :class => "form-control", :placeholder => t(:username) %>
			    </div>
			  </div>
			  <div class="form-group">
			  	<div class="input-group">
      			<div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
			    	<%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => t(:password) %>
			    </div>
			  </div>
			  <% if devise_mapping.rememberable? -%>
			  <div class="checkbox">
			    <label>
			      <%= f.check_box :remember_me %> <%= t(:remember_me) %>
			    </label>
			  </div>
			  <% end -%>
			  <%= f.button t(:login), :class => "btn btn-primary btn-block", data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Signing in ..." } %>
			<% end %>

			<hr>

			<%= render "devise/shared/links" %>
		</div>

	</div>
</div>