<div class="page-header">
  <h1><%= t(:my_details) %> <small><%= t(:manage_profile) %></small></h1>
</div>

<div class="row">
  <div class="col-md-4">
    <%= render partial: "sidebar" %>
  </div>
  <div class="col-md-8">
    <!-- Client Details -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t(:profile_details) %> <%= link_to t(:edit), edit_account_path, :class => "pull-right btn btn-primary btn-xs", :style => "color:#ffffff;" %></h3>
      </div>
      <div class="panel-body">

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label><%= t(:email) %></label>
              <p><%= @users.email %></p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label><%= t(:full_name) %></label>
              <p><%= @users.profile.try(:full_name).blank? ? "N/A" : @users.profile.try(:full_name) %></p>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label><%= t(:facebook_id) %></label>
              <p><%= @users.profile.try(:facebook_id).blank? ? "N/A" : @users.profile.try(:facebook_id) %> <%= link_to "Open", "https://www.facebook.com/" + @users.profile.try(:facebook_id).to_s, :target => "_blank" %></p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
