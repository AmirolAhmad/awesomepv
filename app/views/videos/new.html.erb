<%= form_for :video, url: videos_path, method: :post do |f| %>

<div class="form-group">
  <%= f.label :title, "Video Title" %>
  <%= f.text_field :title, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :description, "Video Description" %>
  <%= f.text_field :description, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :source, "Source From" %>
  <%= f.text_field :source, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :youtube_id, "Youtube ID" %>
  <%= f.text_field :youtube_id, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :featured, "Featured Video ?" %>
  <%= f.check_box :featured, :type => 'checkbox' %>
</div>

<div class="form-group">
  <%= f.submit "Save", :class => "btn btn-primary" %>
  <%= link_to 'Cancel', videos_path, :class => "btn btn-link" %>
</div>

<% end %>