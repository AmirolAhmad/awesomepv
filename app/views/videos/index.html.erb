<div class="page-header">
  <h1>Video List <small>Manage your video details here.</small> <%= link_to "Add New Video", new_video_path, :class => "btn btn-primary btn-xs" %></h1>
</div>

<div class="table-responsive">
  <table class="table table-bordered table-hover" id="videoDetails">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Date Added</th>
        <th class="col-md-2">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @videos.each do |video| %>
      <tr>
        <td><%= video.try(:title) %></td>
        <td><%= video.try(:description) %></td>
        <td><%= video.try(:created_at) %></td>
        <td>
          <div class="btn-group btn-group-xs">
          <%= link_to video_path(video), :class => "btn btn-default", "data-toggle" => "tooltip", :title => "View more details" do %>
            <span class="glyphicon glyphicon-eye-open"></span>
          <% end %>
          <%= link_to edit_video_path(video), :class => "btn btn-info", "data-toggle" => "tooltip", :title => "Edit client details" do %>
            <span class="glyphicon glyphicon-edit"></span>
          <% end %>
          <%= link_to "", method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", "data-toggle" => "tooltip", :title => "Remove this client" do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
$(document).ready( function () {
    $('#videoDetails').DataTable();
} );
</script>




