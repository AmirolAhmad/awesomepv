	</div>
	-->
	<header class="codrops-header">
		<h1>Awesome Video <span>Watch the Awesome Videos ever that you are never watch before.</span></h1>
		<% if user_signed_in? %>
		<nav class="codrops-demos">
			<%= link_to 'Video List', posts_path %>
			<%= link_to 'Submit Video', new_post_path %>
			<%= link_to 'Logout', destroy_user_session_path, method: :delete %>
		</nav>
		<% end %>
	</header>

	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

	<%= yield %>

	<script src="../assets/javascripts/masonry.pkgd.min.js"></script>
	<script src="../assets/javascripts/imagesloaded.pkgd.min.js"></script>
	<script src="../assets/javascripts/classie.js"></script>
	<script src="../assets/javascripts/colorfinder-1.1.js"></script>
	<script src="../assets/javascripts/gridScrollFx.js"></script>
	<script>
		new GridScrollFx( document.getElementById( 'grid' ), {
			viewportFactor : 0.4
		} );
	</script>

</body>
