<% provide(:title, 'Submit Video') %>

<section class="container">
  <article>
    <div class="widget-bg">
      <div class="span4">

        <header class="header-style">
          <h2 class="h-style">Create new video</h2>
        </header>

          <article>
            <div class="widget-bg">
              <div class="form">

                <%= form_for :post, url: posts_path do |f| %>

                <% if @post.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
                  <ul>
                  <% @post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                </div>
                <% end %>

                <label>Video Title</label>
                <%= f.text_field :title, :class => 'input-block-level' %>

                <label>Youtube ID</label>
                <%= f.text_field :youtube_id, :class => 'input-block-level' %>

                <label>Description</label>
                <%= f.text_area :description, :class => 'input-block-level', :rows => 5 %>

                <div class="checkbox">
                <%= f.check_box :featured %> Featured?
                </div>

                <%= f.submit 'Submit', :class => 'form-btn hover-style' %>

                <% end %>

              </div>
            </div>
          </article>
      </div>
    </div>
  </article>
</section>