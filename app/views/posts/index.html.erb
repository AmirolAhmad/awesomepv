<% provide(:title, 'Homepage') %>
<% provide(:description, 'Watch the Awesome Videos ever that you are never watch before.') %>

<div class="col-md-4 col-md-offset-4">
    <div class="form-group">
    <%= form_tag(posts_path, method: "get") do %>
        <%= text_field_tag(:q, params[:search], class: 'form-control', placeholder: 'Search any video you want here') %>
    <% end %>
    </div>
</div>

<section class="grid-wrap">
  <ul class="grid swipe-rotate" id="grid">
    <% @posts.each do |post| %>
    <li>
      <a href="<%= post_path(post) %>"><img src="http://i3.ytimg.com/vi/<%= post.youtube_id %>/hqdefault.jpg" alt="<%= post.title %>">
        <h3><%= post.title %><small> | <%= post.view_count %> views</small></h3>
      </a>
    </li>
    <% end %>
  </ul>
	<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</section>
